@model EditProjectViewModel

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Skills">What skills are required?</label>
    <input asp-for="Skills" class="form-control" />
    <span asp-validation-for="Skills" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ProjectCategories" class="control-label"></label>
    <br />
    <select required asp-items="@ViewBag.Categories" asp-for="ProjectCategories" multiple></select>
    <span asp-validation-for="ProjectCategories" class="text-danger"></span>
</div>
<div class="form-group">
    <label>What is your budget?</label>
    <br />
    <select asp-items="@ViewBag.Budgets" asp-for="Budget.Id"></select>
    <span asp-validation-for="Budget.Id" class="text-danger"></span>
</div>