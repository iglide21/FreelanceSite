@model AdminUsersListingViewModel

@if (this.TempData["SuccessMessage"] != null)
{
    <h3>@TempData["SuccessMessage"]</h3>
}


<table class="table table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model.Users)
        {
            <tr>
                <td><a href="admin/users/details/@user.Id">@user.UserName</a></td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <form asp-controller="Users" asp-action="AddToRole">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" class="form-control">
                                    @foreach (var item in Model.Roles)
                                    {
                                        <option value="@item.Name">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <input class="btn btn-sm btn-primary" type="submit" value="Add to role" />
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>