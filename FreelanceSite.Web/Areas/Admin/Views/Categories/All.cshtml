@model IEnumerable<CategoryListingViewModel>
    @{int counter = 1;}
    <p>
        <a href="#createModal" data-toggle="modal">Create new category</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>

                        <a href="#editModal" data-toggle="modal">Edit</a> |
                        @Html.ActionLink("Delete", "Delete",new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

<!-- Modal -->
<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content text-center">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form method="post" asp-controller="Categories" asp-action="Edit">
                    <div class="form-group">

                        <div class="form-group">
                            <label for="Id">Category id:</label>
                            <input type="number" class="form-control" name="Id" placeholder="Category Id">
                        </div>

                        <div class="form-group">
                            <label for="Title">New category title:</label>
                            <input type="text" class="form-control" name="Title" placeholder="New Title">
                        </div>

                        <input type="submit" class="btn btn-default" value="Edit"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div id="createModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content text-center">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form method="get" asp-controller="Categories" asp-action="Create">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="Title">Category title:</label>
                            <input type="text" class="form-control" name="Title" placeholder="New Title">
                        </div>

                        <input type="submit" class="btn btn-default" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

